  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/bin/lamassu-machine",
      "cwd": "${workspaceRoot}",
      "args": ["--mockBv", "/dev/ttys011",  "--mockBillDispenser", "--mockCam"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}"
    }
  ]
}
